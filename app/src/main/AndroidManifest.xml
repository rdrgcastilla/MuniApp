<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.mpc.muni">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="pe.mpc.muni.InfoActivity"></activity>
        <activity
            android:name=".ModuloTransporte.RecortarVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="pe.mpc.muni.ModuloTramiteDoc.ConsultaDocumento"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ModuloTransporte.ConsultaDniActivity"
            android:screenOrientation="portrait" />
        <activity android:name="pe.mpc.muni.Model.LeerImagen" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/ThemeImage" />
        <activity android:name=".ModuloTransporte.GraciasActivity" />
        <activity android:name=".ModuloTransporte.ReporteTransporteActivity" />
        <activity android:name=".ModuloRentas.ConsultaArbitrios" />
        <activity android:name=".ModuloRentas.ConsultaVehicular" />
        <activity android:name=".ModuloRentas.DetalleArbitrios" />
        <activity android:name=".ModuloRentas.DetalleVehicular" />
        <activity
            android:name=".ModuloTransporte.ReportarVehiculoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".ModuloTransporte.InspectorActivity" />
        <activity android:name=".ModuloTransporte.GerenciaActivity" />
        <activity
            android:name=".ModuloTransporte.PublicoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="pe.mpc.muni.ContactActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="pe.mpc.muni.ModuloEventos.EventosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="pe.mpc.muni.ModuloEventos.EventoShowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="pe.mpc.muni.ModuloLicencias.BuscarLicencia"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ModuloTransporte.TransporteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="pe.mpc.muni.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="pe.mpc.muni.WelcomeActivity" />
        <activity
            android:name="pe.mpc.muni.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name="pe.mpc.muni.MainActivity" />
        <activity
            android:name=".ModuloSedes.CategoriesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName="pe.mpc.muni.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.mpc.muni.MainActivity" />
        </activity>
        <activity
            android:name=".ModuloSedes.DetailActivity"
            android:label="@string/details_title"
            android:parentActivityName=".ModuloSedes.CategoriesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ModuloSedes.CategoriesActivity" />
        </activity>
    </application>

</manifest>